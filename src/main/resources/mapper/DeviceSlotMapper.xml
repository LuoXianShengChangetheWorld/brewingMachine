            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="update" parameterType="com.brewingmachine.entity.DeviceSlot">
        UPDATE device_slot
        <set>
            <if test="deviceId != null">device_id = #{deviceId},</if>
            <if test="slotId != null">slot_id = #{slotId},</if>
            <if test="goodsId != null">goods_id = #{goodsId},</if>
            <if test="priceId != null">price_id = #{priceId},</if>
            <if test="capacity != null">capacity = #{capacity},</if>
            <if test="price != null">price = #{price},</if>
            <if test="stock != null">stock = #{stock},</if>
            <if test="locked != null">locked = #{locked},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="updateStock">
        UPDATE device_slot
        SET stock = #{stock}, update_time = NOW()
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM device_slot WHERE id = #{id}
    </delete>

</mapper>