<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.brewingmachine.mapper.UserCouponMapper">

    <resultMap type="com.brewingmachine.entity.UserCoupon" id="UserCouponResult">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="couponId" column="coupon_id"/>
        <result property="status" column="status"/>
        <result property="receiveTime" column="receive_time"/>
        <result property="useTime" column="use_time"/>
        <result property="expireTime" column="expire_time"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="findById" parameterType="Long" resultMap="UserCouponResult">
        SELECT * FROM user_coupon WHERE id = #{id}
    </select>

    <select id="findByUserId" parameterType="Long" resultMap="UserCouponResult">
        SELECT * FROM user_coupon WHERE user_id = #{userId}
        ORDER BY create_time DESC
    </select>

    <select id="findByUserIdAndStatus" resultMap="UserCouponResult">
        SELECT * FROM user_coupon WHERE user_id = #{userId} AND status = #{status}
        ORDER BY create_time DESC
    </select>

    <select id="findByPage" resultMap="UserCouponResult">
        SELECT * FROM user_coupon
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        ORDER BY create_time DESC
        <if test="page != null and size != null">
            LIMIT #{page}, #{size}
        </if>
    </select>

    <select id="count" resultType="int">
        SELECT COUNT(*) FROM user_coupon
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
    </select>

    <insert id="insert" parameterType="com.brewingmachine.entity.UserCoupon" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_coupon (
            user_id, coupon_id, status, receive_time, use_time, expire_time,
            create_time, update_time
        )
        VALUES (
            #{userId}, #{couponId}, #{status}, #{receiveTime}, #{useTime}, #{expireTime},
            NOW(), NOW()
        )
    </insert>

    <update id="updateStatus">
        UPDATE user_coupon
        SET status = #{status}, update_time = NOW()
        WHERE id = #{id}
    </update>

    <update id="updateUseTime">
        UPDATE user_coupon
        SET use_time = #{useTime}, update_time = NOW()
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="Long">
        DELETE FROM user_coupon WHERE id = #{id}
    </delete>

</mapper>