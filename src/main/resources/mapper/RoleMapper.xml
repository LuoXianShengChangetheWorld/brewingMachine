<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.brewingmachine.mapper.RoleMapper">

    <resultMap id="BaseResultMap" type="com.brewingmachine.entity.Role">
        <id column="id" property="id"/>
        <result column="role_code" property="roleCode"/>
        <result column="role_name" property="roleName"/>
        <result column="role_type" property="roleType"/>
        <result column="description" property="description"/>
        <result column="max_dividend" property="maxDividend"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, role_code, role_name, role_type, description, max_dividend, status, create_time, update_time
    </sql>

    <insert id="insert" parameterType="com.brewingmachine.entity.Role" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO role (role_code, role_name, role_type, description, max_dividend, status, create_time, update_time)
        VALUES (#{roleCode}, #{roleName}, #{roleType}, #{description}, #{maxDividend}, #{status}, #{createTime}, #{updateTime})
    </insert>

    <update id="update" parameterType="com.brewingmachine.entity.Role">
        UPDATE role
        <set>
            <if test="roleCode != null">role_code = #{roleCode},</if>
            <if test="roleName != null">role_name = #{roleName},</if>
            <if test="roleType != null">role_type = #{roleType},</if>
            <if test="description != null">description = #{description},</if>
            <if test="maxDividend != null">max_dividend = #{maxDividend},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM role WHERE id = #{id}
    </delete>

    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT <include refid="Base_Column_List"/>
        FROM role
        WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM role
        ORDER BY id
    </select>

    <select id="selectByRoleCode" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT <include refid="Base_Column_List"/>
        FROM role
        WHERE role_code = #{roleCode}
    </select>

    <select id="selectByUserId" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT r.<include refid="Base_Column_List"/>
        FROM role r
        JOIN user_role ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId}
    </select>

</mapper>